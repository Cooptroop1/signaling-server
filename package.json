{
  "name": "anonmess-signaling",
  "version": "1.0.0",
  "description": "Signaling server for AnonMess WebRTC chat",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "ua-parser-js": "^1.0.2",
    "uuid": "^10.0.0",
    "validator": "^13.12.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/preset-env": "^7.25.4",
    "babel-jest": "^29.7.0"
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setupTests.js"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js"],
    "testMatch": ["**/?(*.)+(test).js"],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
